# 라즈베리파이 환경 설정

# 네트워크 설정
PI_IP=192.168.0.23
PI_USER=pi

# 하드웨어 설정 (기존 프로젝트 참조)
SERIAL_PORT=/dev/ttyUSB0
BAUDRATE=115200
SERIAL_TIMEOUT_SEC=5

# GPIO 핀 설정 (라즈베리파이)
DOOR_RELAY_PIN=18
LOCKER_RELAY_PIN=19
STATUS_LED_PIN=20
BUZZER_PIN=21

# 터치스크린 설정
DISPLAY_WIDTH=1024
DISPLAY_HEIGHT=600
FULLSCREEN=true

# 개발 모드
DEBUG_MODE=true
TEST_MODE=false

